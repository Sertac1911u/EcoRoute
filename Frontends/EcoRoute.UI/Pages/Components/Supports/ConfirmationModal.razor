<div class="fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center animate-fadeIn">
    <div class="bg-white dark:bg-gray-800 rounded-xl max-w-md w-full shadow-2xl p-6 transform transition-all duration-300 scale-100">
        <div class="text-center mb-6">
            <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-red-100 text-red-500 mb-4">
                <i class="fas fa-exclamation-triangle text-2xl"></i>
            </div>
            <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">@Title</h3>
            <p class="text-gray-500 dark:text-gray-400">@Message</p>
        </div>
        <div class="flex justify-between">
            <button class="px-4 py-2 bg-gray-200 hover:bg-gray-300 dark:bg-gray-700 dark:hover:bg-gray-600 rounded-lg text-gray-800 dark:text-gray-200 transition-colors"
                    @onclick="OnCancel"
                    disabled="@IsLoading">
                @CancelText
            </button>
            <button class="px-4 py-2 @ConfirmButtonClass rounded-lg text-white transition-all duration-300 transform hover:scale-105 shadow-md"
                    @onclick="OnConfirm"
                    disabled="@IsLoading">
                @if (IsLoading)
                {
                    <div class="flex items-center">
                        <div class="w-4 h-4 border-2 border-white border-t-transparent rounded-full animate-spin mr-2"></div>
                        <span>İşleniyor...</span>
                    </div>
                }
                else
                {
                    <span>@ConfirmText</span>
                }
            </button>
        </div>
    </div>
</div>

<style>
    @@keyframes fadeIn {
        from

    {
        opacity: 0;
    }

    to {
        opacity: 1;
    }

    }

    .animate-fadeIn {
        animation: fadeIn 0.3s ease-out;
    }
</style>

@code {
    [Parameter] public string Title { get; set; } = "Onaylama";
    [Parameter] public string Message { get; set; } = "Bu işlemi yapmak istediğinizden emin misiniz?";
    [Parameter] public string ConfirmText { get; set; } = "Onayla";
    [Parameter] public string CancelText { get; set; } = "İptal";
    [Parameter] public string ConfirmButtonClass { get; set; } = "bg-primary-500 hover:bg-primary-600";
    [Parameter] public bool IsLoading { get; set; }
    [Parameter] public EventCallback OnConfirm { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
}