    private List<RouteInfo> GetFilteredRoutes()
    {
        if (routes == null)
            return new List<RouteInfo>();

        IEnumerable<RouteInfo> filtered = routes;

        // Apply status filter
        if (statusFilter != "all")
        {
            RouteStatus status = Enum.Parse<RouteStatus>(statusFilter, true);
            filtered = filtered.Where(r => r.Status == status);
        }

        // Apply driver filter
        if (driverFilter != "all")
        {
            int driverId = int.Parse(driverFilter);
            filtered = filtered.Where(r => r.DriverId == driverId);
        }

        // Apply date filter
        switch (dateRangeFilter)
        {
            case "today":
                filtered = filtered.Where(r => r.StartDate.Date == DateTime.Now.Date);
                break;
            case "yesterday":
                filtered = filtered.Where(r => r.StartDate.Date == DateTime.Now.Date.AddDays(-1));
                break;
            case "week":
                DateTime startOfWeek = DateTime.Now.Date.AddDays(-(int)DateTime.Now.DayOfWeek);
                filtered = filtered.Where(r => r.StartDate.Date >= startOfWeek);
                break;
            case "month":
                DateTime startOfMonth = new DateTime(DateTime.Now.Year, DateTime.Now.Month, 1);
                filtered = filtered.Where(r => r.StartDate.Date >= startOfMonth);
                break;
            case "custom":
                filtered = filtered.Where(r => r.StartDate.Date >= startDate.Date && r.StartDate.Date <= endDate.Date);
                break;
        }

        return filtered.ToList();
    }

